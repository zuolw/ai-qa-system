{
  "family": "ai-qa-services",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "ACCOUNT_ID.dkr.ecr.ap-southeast-2.amazonaws.com/ai-qa-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-qa-frontend",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "api-gateway",
      "image": "ACCOUNT_ID.dkr.ecr.ap-southeast-2.amazonaws.com/ai-qa-api-gateway:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "aws"
        },
        {
          "name": "NACOS_SERVER_ADDR",
          "value": "nacos-service:8848"
        },
        {
          "name": "DB_HOST",
          "value": "ai-qa-db.cqwg5c6qkmsq.ap-southeast-2.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "3306"
        },
        {
          "name": "DB_NAME",
          "value": "aiqa"
        },
        {
          "name": "DB_USERNAME",
          "value": "admin"
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:ACCOUNT_ID:parameter/ai-qa/db/password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-qa-api-gateway",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "user-service",
      "image": "ACCOUNT_ID.dkr.ecr.ap-southeast-2.amazonaws.com/ai-qa-user-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8081,
          "hostPort": 8081,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "aws"
        },
        {
          "name": "NACOS_SERVER_ADDR",
          "value": "nacos-service:8848"
        },
        {
          "name": "DB_HOST",
          "value": "ai-qa-db.cqwg5c6qkmsq.ap-southeast-2.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "3306"
        },
        {
          "name": "DB_NAME",
          "value": "aiqa"
        },
        {
          "name": "DB_USERNAME",
          "value": "admin"
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:ACCOUNT_ID:parameter/ai-qa/db/password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-qa-user-service",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "qa-service",
      "image": "ACCOUNT_ID.dkr.ecr.ap-southeast-2.amazonaws.com/ai-qa-qa-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8082,
          "hostPort": 8082,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "aws"
        },
        {
          "name": "NACOS_SERVER_ADDR",
          "value": "nacos-service:8848"
        },
        {
          "name": "DB_HOST",
          "value": "ai-qa-db.cqwg5c6qkmsq.ap-southeast-2.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "3306"
        },
        {
          "name": "DB_NAME",
          "value": "aiqa"
        },
        {
          "name": "DB_USERNAME",
          "value": "admin"
        }
      ],
      "secrets": [
        {
          "name": "GOOGLE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-2:ACCOUNT_ID:secret:ai-qa/google-api-key"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:ACCOUNT_ID:parameter/ai-qa/db/password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-qa-qa-service",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "nacos",
      "image": "nacos/nacos-server:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8848,
          "hostPort": 8848,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "MODE",
          "value": "standalone"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-qa-nacos",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
